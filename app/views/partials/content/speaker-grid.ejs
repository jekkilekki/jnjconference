<div class="container">
    <h2 class="section-title">Meet our Speakers</h2>
    <!-- http://davist11.github.io/css-diamond-grid/# -->
  <div class="grid">
    <% if ( pageID == 'home' ) { %>
    <div class="grid-item grid-title">
      <div class="grid-inner"><a href="/speakers">Speakers</a></div>
    </div>
    <% } %>

    <% speakers.forEach( function( speaker ) { %>
        <% if ( pageID == 'speakers' ) { %>
            <!-- <article class="speaker"> -->
        <% } %>
    <div class="grid-item photo">
        <div class="grid-inner" style="background-image: url('/img/people/<%= speaker.img %>')">
            
        <% if ( pageID !== 'home' ) { %>
            <div class="attendee-img-shadow"></div>
            <div class="attendee-img-shadow-yellow"></div>
        <% } %>
            <% if ( pageID == 'home' ) { %>
            <div class="speaker-meta-box">
                <div class="speaker-meta">
                    <a href="/speakers/<%= speaker.shortname %>">
                        <p class="speaker-name"><%= speaker.name %></p>
                    </a>
                    <p class="speaker-affiliation"><%= speaker.affiliation %></p>
                    <p class="speaker-details"><%= speaker.other %></p>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <% if ( pageID !== 'home' ) { %>
        <% if ( pageID !== 'speakers' ) { %>
            <div class="speaker-info-section">
        <% } %>
        <div>
            <div class="speaker-meta">
                <p class="speaker-name"><a href="/speakers/<%= speaker.shortname %>"><%= speaker.name %></a></p>
                <p class="speaker-affiliation"><%= speaker.affiliation %></p>
            </div>

            <div class="speaker-meta-info-box speaker-meta">
                <p class="speaker-session"><strong>Talk / </strong><a href="/speakers/<%= speaker.shortname %>"><%= speaker.title %></a></p>
                <%= speaker.summary %>
            </div>
        </div>

        <% if ( pageID == 'speakers' ) { %>
        <!-- </article> -->
        <% } %>

        <% if ( pageID !== 'speakers' ) { %>
            <div class="speaker-info">
                <p class="speaker-abstract"><%- speaker.abstract %></p>
                <h2 class="speaker-bio-title">About <%= speaker.nickname %></h2>
                <p class="speaker-bio"><%- speaker.bio %></p>
            </div>
        </div><!-- .speaker-details -->
        <% } %>
    <% } %>


    <% }); %>

    <% if ( pageID !== 'speakers' ) { %>
    <div class="speaker-grid-last">
      <div class="testimonial">
        <blockquote>
          KOTESOL organizes fantastic, inspiring conferences.
          <cite>Angela<span>KOTESOL member since 2018</span></cite>
        </blockquote>
      </div>
    </div>
    <div class="page-button-container">
        <a class="page-button button" href="/speakers">View All Speaker Details</a>
    </div>
    <% } %>
</div>

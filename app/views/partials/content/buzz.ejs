<div class="container">
  <h2 class="buzz-title"><img src="/img/jnj-kotesol-logo-blue.png" /> <span>Feedback</span></h2>
  <ul class="buzz-list">

    <% buzz.forEach( function( attendee ) { %>
    <li class="buzz-list-item">
      <figure class="attendee-img">
        <img src="/img/people/<%= attendee.img %>">
      </figure>
      <div class="attendee-img-shadow"></div>
      <div class="attendee-img-shadow-yellow"></div>
      <p class="attendee-info">
        <span class="attendee-name"><%= attendee.name %></span>
        <% if ( attendee.link !== '' ) { %>
          <a class="attendee-link" href="<%= attendee.link %>">
        <% } else { %>
          <span class="attendee-location">
        <% } %>
            <%= attendee.location %>
        <% if ( attendee.link !== '' ) { %>
          </a>
        <% } else { %>
          </span>
        <% } %>
      </p>
      <p class="attendee-comment"><%= attendee.comment %></p>
    </li>
    <% }); %>

  </ul>

  <% if ( pageID == 'home' ) { %>

    <!-- Begin Mailchimp Signup Form -->
    <div id="mc_embed_signup">
      <form class="subscriber-list validate" action="https://jnjkotesol.us17.list-manage.com/subscribe/post?u=97baefed34e20adff64a02dfc&amp;id=4080cfa5a5" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank" novalidate>
        <!-- <div id="mc_embed_signup_scroll"> -->
          <h2 class="subscriber-list-title">Subscribe to the JNJ KOTESOL email list</h2>
          
          <div id="mce-responses" class="clear">
            <div class="response" id="mce-error-response" style="display:none"></div>
            <div class="response" id="mce-success-response" style="display:none"></div>
          </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
          
          <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_97baefed34e20adff64a02dfc_4080cfa5a5" tabindex="-1" value=""></div>
          <input class="subscriber-email form-control" type="email" placeholder="Your Email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
          <input class="button subscriber-submit" type="submit" value="Get on the list!" name="subscribe" id="mc-embedded-subscribe" class="button">
        <!-- </div> -->
      </form>
    </div> 
    <!--End mc_embed_signup-->

  <% } %>
</div>

<% if ( pageID !== 'home' ) { %>
  <div class="svg-container map-svg svg-block">
    <% include ../template/svgslant.ejs %>
  </div>
<% } %>

<div class="container">
  <ul class="buzz-list">

    <% buzz.forEach( function( attendee ) { %>
    <li class="buzz-list-item">
      <figure class="attendee-img">
        <img src="/img/people/<%= attendee.img %>">
      </figure>
      <p class="attendee-info">
        <span class="attendee-name"><%= attendee.name %></span>
        <% if ( attendee.link !== '' ) { %>
          <a class="attendee-link" href="<%= attendee.link %>">
        <% } else { %>
          <span class="attendee-location">
        <% } %>
            <%= attendee.location %>
        <% if ( attendee.link !== '' ) { %>
          </a>
        <% } else { %>
          </span>
        <% } %>
      </p>
      <p class="attendee-comment"><%= attendee.comment %></p>
    </li>
    <% }); %>

  </ul>

  <% if ( pageID == 'home' ) { %>

    <h2 class="subscriber-list-title">Subscribe to the JNJ KOTESOL email list</h2>
    
    <!-- Begin MailChimp Signup Form -->
    <style type="text/css">
        #mce-responses{ position: absolute; bottom: 3rem; color: #607d8b; }
    </style>
    
    <div id="mc_embed_signup">
    <form action="https://jnjkotesol.us17.list-manage.com/subscribe/post?u=97baefed34e20adff64a02dfc&amp;id=4080cfa5a5" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate subscriber-list" target="_blank" novalidate>

      <input type="email" value="" name="EMAIL" class="required email subscriber-email form-control" id="mce-EMAIL" placeholder="Your Email" />
        
        <div id="mce-responses" class="clear">
            <div class="response" id="mce-error-response" style="display:none"></div>
            <div class="response" id="mce-success-response" style="display:none"></div>
        </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
        
        <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_97baefed34e20adff64a02dfc_4080cfa5a5" tabindex="-1" value=""></div>
        
        <input type="submit" value="Get on the list!" name="subscribe" id="mc-embedded-subscribe" class="button subscriber-submit">
    </form>
    </div>
    
    <script type='text/javascript' src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script><script type='text/javascript'>(function($) {window.fnames = new Array(); window.ftypes = new Array();fnames[0]='EMAIL';ftypes[0]='email';fnames[1]='FNAME';ftypes[1]='text';fnames[2]='LNAME';ftypes[2]='text';fnames[3]='BIRTHDAY';ftypes[3]='birthday';}(jQuery));var $mcj = jQuery.noConflict(true);</script>
    <!--End mc_embed_signup-->
    
  <% } %>
</div>

<% if ( pageID !== 'home' ) { %>
  <div class="svg-container footer-svg svg-block">
    <% include ../template/svgslant.ejs %>
  </div>
<% } %>
